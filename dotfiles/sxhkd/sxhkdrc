# sxhkd - simple hotkeys

# Variables
super = Mod4
alt = Mod1

# Launch terminal
super + Return
    kitty || alacritty || xterm

# Rofi app launcher
super + d
    rofi -show drun

# Rofi run
super + r
    rofi -show run

# Screenshot
Print
    maim ~/Pictures/screenshot_$(date +%Y%m%d_%H%M%S).png && notify-send "Screenshot saved"

# Focus and move
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

super + Shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# Resize mode (hold)
super + alt + {h,j,k,l}
    bspc node -z {left 20 0,right 20 0,down 0 20,up 0 20}

# Kill focused
super + Shift + q
    bspc node -c

# Toggle floating
super + Shift + space
    bspc node -t floating

# Move focused to monitor
super + alt + Left
    bspc node -d prev.local
super + alt + Right
    bspc node -d next.local

# Change desktop
super + {1-9}
    bspc desktop -f "^\{1-9\}" || true

# Move window to desktop
super + Shift + {1-9}
    bspc node -d "^\{1-9\}" || true
